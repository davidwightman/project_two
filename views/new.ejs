<html>
<head>
<meta charset="utf-8">
  	<title>Forum</title>
  	<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="http://localhost:3000/skeleton.css">
		<link rel="stylesheet" href="http://localhost:3000/normalize.css">
		<link rel = "stylesheet" type = "text.css" href= "http://localhost:3000/style.css">
</head>
	<body>
		<div class="container">
			<div class="sixteen columns">	
				<h1>Create a new thread</h1>
			</div>
			<div class="sixteen columns">	
			<form action="/threads" method="POST">
				<input type="text" name="title" placeholder="thread title"></br>
				<textarea name="content" placeholder="What would you like to say?"></textarea></br>
				<button>Submit thread</button>

			<select name="author_id">
			<% users.forEach(function(user){ %>
 			 <option value="<%= user.user_id %>"><%= user.user_name %></option> <% }) %>
			</select>

			



			</form>
			</div>
		</div>
	</body>
</html>